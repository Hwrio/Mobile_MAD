<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroudmain"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz25dp"
            android:layout_marginTop="5dp"
            android:text="USER 1"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/ratingBar_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-40dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_light"
            android:rating="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/cmt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="@dimen/sz25dp"
            android:layout_marginBottom="@dimen/sz10dp"
            android:justificationMode="inter_word"
            android:text="Phục vụ đa dạng các loại đồ uống, từ cà phê, trà sữa đến các loại sinh tố, nước ép. Giá cả hợp lý, chất lượng tốt, phục vụ chu đáo."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="@dimen/sz20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee_shop_2" />
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="@dimen/sz25dp"/>-->

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

    </LinearLayout>

</LinearLayout>
